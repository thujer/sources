    <script type="text/html" id="offer-template">
        <a href="#" title="" data-bind="attr: { href: photo, title: title }" data-gallery>
            <div class="offer" data-bind="style: { backgroundImage: img, 'height': h, 'width': w }">
                <div class="title" data-bind="text: title"></div>
                <div class="bottom_overflow">
                    <img class="arrow" src="<?php echo Nette\Templating\Helpers::escapeHtmlComment($basePath) ?>/images/icons/arrow_up.png" alt="up" />
                    <div class="description" data-bind="text: description"></div>
                </div>
            </div>
        </a>
