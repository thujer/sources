    <script type="text/javascript">

        function PopulateCellModel() {

            var default_width = '210px';
            var default_height = '210px';

            this.zula = { title: 'ŽULOVÉ KOSTKY', img: "dlazba_zula.jpg", photo: "dlazba_zula.jpg", description: 'Ekonomicky výhodná varianta klasického ...', h: default_height, w: default_width };
            this.zamkova = { title: 'ZÁMKOVÁ DLAŽBA', img: "dlazba_zamkova.jpg", photo: "dlazba_zamkova.jpg", description: 'Elegantní řešení pro oplocení chodníku ...', h: default_height, w: default_width };
            this.skladebna = { title: 'SKLADEBNÁ DLAŽBA', img: "dlazba_skladebna.jpg", photo: "dlazba_skladebna.jpg", description: 'Vyznačuje se vysokou odolností ...', h: default_height, w: default_width };
            this.zatravnovaci = { title: 'ZATRAVŇOVACÍ DLAŽBA', img: "dlazba_zatravnovaci.jpg", photo: "dlazba_zatravnovaci.jpg", description: 'Vyznačuje se vysokou odolností ...', h: default_height, w: default_width };
            this.velkoformat = { title: 'VELKOFORMÁTOVÁ DLAŽBA', img: "dlazba_velkoformat.jpg", photo: "dlazba_velkoformat.jpg", description: 'Ekonomicky výhodná varianta klasického ...', h: default_height, w: '432px' };

            for(var property in this) {
                if(this.hasOwnProperty(property)) {
                    this[property].photo = {$basePath} +'/images/photos/' + this[property].photo;
                    this[property].icon = {$basePath} +'/images/icons/' + this[property].icon;
                    this[property].img = 'url("' + {$basePath} + "/images/photos/" + this[property].img + '")';
                }
            }
        }
        ko.applyBindings(new PopulateCellModel());

    </script>

</div>

